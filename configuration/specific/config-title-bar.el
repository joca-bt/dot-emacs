(defun tb-file-path ()
  (let ((file-name (buffer-file-name)))
    (when file-name
      (format " - %s" (file-name-directory (abbreviate-file-name file-name))))))


(defun tb-slime-info ()
  (when (and (boundp 'slime-mode)
             slime-mode)
    (format "@%s" (slime-connection-name))))


