;; title bar -------------------------------------------------------------------

(setq frame-title-format '("%b"
                           (:eval (tb-file-path))))


;; -----------------------------------------------------------------------------
;; file path -------------------------------------------------------------------

(defun tb-file-path ()
  (let ((file-name (buffer-file-name)))
    (when file-name
      (format " - %s" (file-name-directory (abbreviate-file-name file-name))))))


